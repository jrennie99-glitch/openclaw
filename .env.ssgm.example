# SSGM (Super Supreme God Mode) - Mission Control Feature Flags
# All features default to OFF for production safety

# Master switches
SSGM_ENABLED=false              # Enable SSGM Mission Control system
SSGM_UI_ENABLED=false           # Enable Mission Control dashboard UI at /ssgm
TRACE_LOGGING_ENABLED=true      # Event tracking and logging (safe to leave ON)
EVENT_STREAM_ENABLED=false      # Real-time SSE event streaming

# Observability features
WORKSPACE_TRACKING_ENABLED=false    # Track file reads/writes with diffs
CHECKPOINTS_ENABLED=false           # Auto-checkpoint before destructive operations

# Safety controls
HITL_APPROVAL_ENABLED=false         # Human-in-the-loop approval gates
SAFE_MODE=false                     # Read-only mode (blocks writes/exec)
ADMIN_KILL_SWITCH=false             # Emergency stop for all operations

# Multimodal features
UPLOADS_ENABLED=false           # File upload support
VOICE_ENABLED=false             # Voice input/output support
CAMERA_ENABLED=false            # Camera/vision support
